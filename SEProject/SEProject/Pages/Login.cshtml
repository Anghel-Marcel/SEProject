@page
@model SEProject.Pages.LoginModel
@{
	ViewData["Title"] = "Login";
}

<div class="container mt-5" style="max-width: 500px;">
    <h2 class="mb-4 text-center">Login</h2>

    <form method="post">
        <div class="mb-3">
            <label asp-for="Input.Username" class="form-label">Username</label>
            <input asp-for="Input.Username" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Input.Password" class="form-label">Password</label>
            <input asp-for="Input.Password" type="password" class="form-control" />
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-success">Login</button>
        </div>
    </form>

    @if (Model.Message != null)
    {
        <div class="alert alert-danger mt-3">@Model.Message</div>
    }
</div>