@page
@model SEProject.Pages.AssignPoliceStationModel
@{
    ViewData["Title"] = "Asociază Utilizator la Secție";
}

<h3>Asociază Utilizator la Secție</h3>

<form method="post">
    <div class="form-group mb-3">
        <label for="UserId">Selectează Utilizator:</label>
        <select id="UserId" name="UserId" class="form-control">
            @foreach (var user in Model.Users)
            {
                <option value="@user.Id">@user.Email</option>
            }
        </select>
    </div>

    <div class="form-group mb-3">
        <label for="PoliceStationId">Selectează Secție:</label>
        <select id="PoliceStationId" name="PoliceStationId" class="form-control">
            @foreach (var station in Model.Stations)
            {
                <option value="@station.Id">@station.Name</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Asociază</button>
</form>
